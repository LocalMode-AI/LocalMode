{
  "name": "@localmode/transformers",
  "version": "1.0.0",
  "description": "Transformers.js provider for @localmode - implements all ML model interfaces",
  "license": "MIT",
  "author": "LocalMode",
  "repository": {
    "type": "git",
    "url": "https://github.com/LocalMode-AI/LocalMode.git",
    "directory": "packages/transformers"
  },
  "homepage": "https://github.com/LocalMode-AI/LocalMode#readme",
  "bugs": {
    "url": "https://github.com/LocalMode-AI/LocalMode/issues"
  },
  "keywords": [
    "transformers",
    "huggingface",
    "embeddings",
    "classification",
    "ner",
    "whisper",
    "clip",
    "blip",
    "local-first",
    "webgpu",
    "wasm",
    "ml",
    "ai"
  ],
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "peerDependencies": {
    "@localmode/core": "^1.0.0",
    "@huggingface/transformers": "^3.0.0"
  },
  "peerDependenciesMeta": {
    "@huggingface/transformers": {
      "optional": false
    }
  },
  "devDependencies": {
    "@localmode/core": "workspace:*",
    "@huggingface/transformers": "^3.8.1",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3"
  }
}
